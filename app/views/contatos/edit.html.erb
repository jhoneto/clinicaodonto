<script>
    $(function(){
        $("#btnback").button({
            label: "Voltar",
            icons: {
                primary: "backIcon"
            }
        
        }).click(function(){
            location.href = '/contatos';
        });
        
        $("#btnsave").button({
            label: "Salvar",
            icons: {
                primary: "saveIcon"
            }
        
        }).click(function(){
            $("form").submit();
        });
    })
</script>
<h1>Editar contato</h1>
<div id="contatos" class="dados">
    <p>
        <div class="fg-toolbar ui-widget-header ui-corner-all ui-helper-clearfix">
            <button id="btnsave" hint="Salvar" title="Salvar" class="fg-button ui-state-default ui-corner-left">
            </button>
            <button id="btnback" hint="Voltar" title="Voltar" class="fg-button ui-state-default ui-corner-left">
            </button>
        </div>
        <% form_for(@contato) do |f| %>
        <%= f.error_messages %>
        <!-- %= f.submit 'Salvar', :class=>"button"  %-->
        <br>
        <div class="dadoscontato">
            <p>
                <label>
                    Nome 
                </label>
                <%= f.text_field :ctt_nome, :style => "width: 425px" %>
            </p>
            <p>
                <label>
                    Telefone 01
                </label>
                <%= masked_text_field(:contato, :ctt_fone1, :style => "width: 130px", :mask => :phone) %>
                <label style="margin-left: 85px; width: 70px;">
                    Telefone 02 
                </label>
                <%= masked_text_field(:contato, :ctt_fone2, :style => "width: 130px", :mask => :phone) %>
            </p>
            <p>
                <label>
                    Observação
                </label>
                <%= f.text_area :ctt_obs, :rows => 5, :style => "width: 425px; border: 1px solid;" %>
            </p>
        </div>
        <% end %>
    </p>
</div>
