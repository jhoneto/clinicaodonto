<div id="joinhead" class="joinhead" >
<h1>Ficha do(a) paciente <b><i><%= @paciente.pac_nome%></i></b></h1> 
<table width="600">
  <tr>
    <th>Dentista</th>
    <th>Data de registro</th>
    <th>Detalhe</th>
  </tr>

<% @fichas.each do |ficha| %>
  <tr>
    <td><%=h ficha.dentista.den_nome %></td>
    <td><%=h ficha.fic_data %></td>
    <td><%=h ficha.fic_desc %></td>
    <td><%= link_to 'Show', ficha %></td>
    <td><%= link_to 'Edit', edit_ficha_path(ficha) %></td>
    <td><%= link_to 'Destroy', ficha, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New ficha', new_ficha_path %>
</div>